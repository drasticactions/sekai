<Application
    x:Class="Sekai.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sekai"
    xmlns:locator="using:Sekai.Locator"
    xmlns:tools="using:Sekai.Tools">
<Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <locator:ViewModels x:Name="Locator" />
	        <tools:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <tools:HasMediaConverter x:Key="HasMediaConverter" />
            <tools:MediaPreviewConverter x:Key="MediaPreviewConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
